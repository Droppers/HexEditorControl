<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonia="clr-namespace:HexControl.Avalonia;assembly=HexControl.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="HexControl.Samples.Avalonia.MainWindow"
        Title="Avalonia"
        x:Name="Root">
    <Grid>
        <avalonia:HexEditorControl Document="{Binding Document}" />
        <avalonia:PatternControl Width="500" Height="500" Patterns="{Binding Patterns}" />
    </Grid>
</Window>