<UserControl x:Class="HexControl.Wpf.PatternControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HexControl.Wpf"
             xmlns:directX="clr-namespace:Microsoft.Wpf.Interop.DirectX;assembly=Microsoft.Wpf.Interop.DirectX"
             mc:Ignorable="d" SnapsToDevicePixels="True" UseLayoutRounding="True"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" x:Name="ImageContainer">
            <Image x:Name="MainImage">
                <Image.Source>
                    <directX:D3D11Image x:Name="InteropImage" />
                </Image.Source>
            </Image>
        </Grid>
        <ScrollBar Name="VerticalScrollBar" Grid.Column="1" />
    </Grid>
</UserControl>
